<div class="container">
  <h1 class="d-flex justify-content-center m-4"><%= t('pages.index.h1') %></h1>

  <table class="table table-striped table-responsive">
    <%= link_to t('pages.new_exchange.title'), new_exchange_path, class: 'float-end mb-3'  %>
    <thead>
      <tr>
        <th scope="col"><%= t('model.id') %></th>
        <th scope="col"><%= t('model.received') %></th>
        <th scope="col"><%= t('model.sended') %></th>
        <th scope="col"><%= t('model.avg_received') %></th>
        <th scope="col"><%= t('model.avg_sended') %></th>
      </tr>
    </thead>
    <tbody>
      <%@exchanges.each do |exchange|  %>
        <tr>
          <th scope="row"><%= exchange.id %></th>
          <td><%= exchange.receiving.each {|pokemon| pokemon.capitalize!}.join(', ') %></td>
          <td><%= exchange.sending.each {|pokemon| pokemon.capitalize!}.join(', ') %></td>
          <td><%= exchange.avg_receiving  %></td>
          <td><%= exchange.avg_sending  %></td>
        </tr>
      <% end  %>
    </tbody>
  </table>
</div>
